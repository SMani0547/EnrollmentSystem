@model IEnumerable<USPEducation.Models.Enrollment>

<div class="container-fluid px-4">
    <h1 class="mt-4">Student Enrollments</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            All Student Enrollments
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Student Name</th>
                        <th>Course Code</th>
                        <th>Course Title</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>Grade</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model)
                    {
                        <tr>
                            <td>@enrollment.Student.StudentId</td>
                            <td>
                                <a asp-action="StudentDetails" asp-route-id="@enrollment.StudentId">
                                    @enrollment.Student.FirstName @enrollment.Student.LastName
                                </a>
                            </td>
                            <td>@enrollment.Course.CourseCode</td>
                            <td>@enrollment.Course.Title</td>
                            <td>@enrollment.Semester</td>
                            <td>@enrollment.Year</td>
                            <td>
                                <form asp-action="UpdateGrade" method="post" class="d-flex">
                                    <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                                    @{
                                        var grades = new[] { "", "A+", "A", "B+", "B", "C+", "C", "D", "E", "F" };
                                        var gradeList = new SelectList(grades, enrollment.Grade ?? "");
                                    }
                                    <select name="grade" class="form-select form-select-sm me-2" style="width: 100px;" asp-items="@gradeList">
                                        <option value="">Select</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                </form>
                            </td>
                            <td>
                                <a asp-action="StudentDetails" asp-route-id="@enrollment.StudentId" class="btn btn-info btn-sm">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 