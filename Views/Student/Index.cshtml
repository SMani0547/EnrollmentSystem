@model IEnumerable<USPEducation.Models.StudentEnrollment>

@{
    ViewData["Title"] = "My Courses";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">My Courses</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Enrolled Courses
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    You are not enrolled in any courses yet.
                    <a asp-action="AvailableCourses" class="alert-link">View available courses</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Semester</th>
                                <th>Year</th>
                                <th>Grade</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model)
                            {
                                <tr>
                                    <td>@enrollment.Course.Code</td>
                                    <td>@enrollment.Course.Name</td>
                                    <td>@enrollment.Semester</td>
                                    <td>@enrollment.Year</td>
                                    <td>@(enrollment.Grade ?? "Not graded")</td>
                                    <td>
                                        <a asp-action="CourseDetails" asp-route-id="@enrollment.CourseId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="text-end">
        <a asp-action="AvailableCourses" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Enroll in Courses
        </a>
    </div>
</div> 