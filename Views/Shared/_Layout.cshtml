@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@using USPEducation.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SOLS - Student Online Services</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/USPEducation.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="student-id">
                        @if (User.IsInRole("Student"))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            @user.StudentId
                        }
                    </span>
                }
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/usp-logo.png" alt="USP Logo" class="usp-logo" />
                    SOLS - Student Online Services
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link text-light">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login to SOLS</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-md-3 col-lg-2 sidebar">
                    <div class="menu-header">Menu</div>
                    <div class="nav flex-column">
                        @if (User.IsInRole("Student"))
                        {
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Student" asp-action="Index">
                                <i class="bi bi-house-door"></i> My Home
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")"
                               asp-controller="Student" asp-action="Profile">
                                <i class="bi bi-person"></i> My Profile
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Registrations" ? "active" : "")"
                               asp-controller="Student" asp-action="Registrations">
                                <i class="bi bi-journal-text"></i> My Registrations
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Timetable" ? "active" : "")"
                               asp-controller="Student" asp-action="Timetable">
                                <i class="bi bi-calendar3"></i> My Timetable
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Grades" ? "active" : "")"
                               asp-controller="Student" asp-action="Grades">
                                <i class="bi bi-mortarboard"></i> My Grades
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Finance" ? "active" : "")"
                               asp-controller="Student" asp-action="Finance">
                                <i class="bi bi-wallet2"></i> My Finance
                            </a>
                        }
                        else if (User.IsInRole("Manager"))
                        {
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-controller="Manager" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "active" : "")"
                               asp-controller="Manager" asp-action="Students">
                                <i class="bi bi-people"></i> Student Management
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Courses" ? "active" : "")"
                               asp-controller="Manager" asp-action="Courses">
                                <i class="bi bi-book"></i> Course Management
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")"
                               asp-controller="Manager" asp-action="Reports">
                                <i class="bi bi-file-earmark-text"></i> Reports
                            </a>
                        }
                    </div>
                </div>
                <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                    @RenderBody()
                </main>
            }
            else
            {
                <main role="main" class="col-12 px-4 main-content">
                    @RenderBody()
                </main>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
