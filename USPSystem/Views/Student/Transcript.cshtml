@{
    ViewData["Title"] = "My Transcript";
}

<h2>My Transcript</h2>

@if (TempData["Error"] != null)
{
<div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" asp-controller="Student" asp-action="GenerateTranscript">
    <button type="submit" class="btn btn-primary">Generate Transcript (PDF)</button>
</form>
