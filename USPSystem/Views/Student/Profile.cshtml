@model USPSystem.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">My Profile</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            Personal Information
        </div>
        <div class="card-body">
            <form asp-action="UpdateProfile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">Student ID</label>
                            <input asp-for="UserName" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MajorType" class="control-label">Program Structure</label>
                            <select asp-for="MajorType" class="form-select" asp-items="Html.GetEnumSelectList<MajorType>()">
                            </select>
                            <span asp-validation-for="MajorType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MajorI" class="control-label">First Major</label>
                            <input asp-for="MajorI" class="form-control" />
                            <span asp-validation-for="MajorI" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3" id="secondMajorRow">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MajorII" class="control-label">Second Major</label>
                            <input asp-for="MajorII" class="form-control" />
                            <span asp-validation-for="MajorII" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3" id="minorRow">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MinorI" class="control-label">Minor</label>
                            <input asp-for="MinorI" class="form-control" />
                            <span asp-validation-for="MinorI" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateFields() {
            var majorType = document.getElementById('MajorType').value;
            var secondMajorRow = document.getElementById('secondMajorRow');
            var minorRow = document.getElementById('minorRow');

            if (majorType === '@MajorType.DoubleMajor') {
                secondMajorRow.style.display = 'flex';
                minorRow.style.display = 'none';
            }
            else if (majorType === '@MajorType.MajorMinor') {
                secondMajorRow.style.display = 'none';
                minorRow.style.display = 'flex';
            }
            else {
                secondMajorRow.style.display = 'none';
                minorRow.style.display = 'none';
            }
        }

        document.getElementById('MajorType').addEventListener('change', updateFields);
        updateFields();
    </script>
} 

