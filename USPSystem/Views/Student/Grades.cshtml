@model List<USPSystem.Models.GradeViewModel>
@{
    ViewData["Title"] = "My Grades";
}

<div class="container">
    <h2 class="mb-4">My Grades</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No grades available.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="bg-teal text-white">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Grade</th>
                        <th>Marks</th>
                        <th>Year</th>
                        <th>Semester</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.OrderByDescending(g => g.Year).ThenByDescending(g => g.Semester))
                    {
                        <tr>
                            <td>@grade.CourseCode</td>
                            <td>@grade.CourseName</td>
                            <td>@grade.Grade</td>
                            <td>@grade.Marks</td>
                            <td>@grade.Year</td>
                            <td>@(grade.Semester == 1 ? "Semester 1" : "Semester 2")</td>
                            <td>
                                @if (grade.HasAppliedForRecheck)
                                {
                                    <span class="badge bg-secondary">Recheck Requested</span>
                                }
                                else
                                {
                                    <a asp-action="ApplyForRecheck" 
                                       asp-route-courseCode="@grade.CourseCode"
                                       asp-route-year="@grade.Year"
                                       asp-route-semester="@grade.Semester"
                                       class="btn btn-primary btn-sm">
                                        Apply for Recheck
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 