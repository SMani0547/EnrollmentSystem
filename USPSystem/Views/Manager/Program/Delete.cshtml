@model USPSystem.Models.AcademicProgram

@{
    ViewData["Title"] = "Delete Program";
}

<div class="container mt-4">
    <h2>Delete Program</h2>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this program?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Program Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Code</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Level</dt>
                <dd class="col-sm-9">@Model.Level</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.Duration years</dd>

                <dt class="col-sm-3">Credit Points</dt>
                <dd class="col-sm-9">@Model.CreditPoints</dd>

                <dt class="col-sm-3">Offering Year</dt>
                <dd class="col-sm-9">@Model.OfferingYear</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 

