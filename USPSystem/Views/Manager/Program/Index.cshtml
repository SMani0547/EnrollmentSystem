@model IEnumerable<USPSystem.Models.AcademicProgram>

@{
    ViewData["Title"] = "Programs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Programs</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Program
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Duration</th>
                    <th>Credits</th>
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var program in Model)
                {
                    <tr>
                        <td>@program.Code</td>
                        <td>@program.Name</td>
                        <td>@program.Level</td>
                        <td>@program.Duration years</td>
                        <td>@program.CreditPoints</td>
                        <td>@program.OfferingYear</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@program.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@program.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                                <a asp-controller="ProgramRequirement" asp-action="Index" asp-route-programId="@program.Id" 
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-list-check"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 

