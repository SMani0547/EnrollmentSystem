@{
    ViewData["Title"] = "Manage Student Hold";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Manage Student Hold</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <h4>Student ID: @ViewBag.StudentId</h4>

                    <div class="mt-4">
                        <h5>Place Hold</h5>
                        <form asp-action="PlaceHold" method="post">
                            <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
                            <div class="form-group">
                                <label for="reason">Hold Reason</label>
                                <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-warning mt-3">Place Hold</button>
                        </form>
                    </div>

                    <div class="mt-4">
                        <h5>Remove Hold</h5>
                        <form asp-action="RemoveHold" method="post">
                            <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
                            <button type="submit" class="btn btn-success">Remove Hold</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 