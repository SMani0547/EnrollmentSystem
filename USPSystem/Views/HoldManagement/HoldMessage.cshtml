@{
    ViewData["Title"] = "Account On Hold";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">Account On Hold</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Your account is currently on hold.</h4>
                        <p>@TempData["HoldReason"]</p>
                    </div>
                    
                    <div class="mt-4">
                        <h5>Hold Details:</h5>
                        <ul class="list-unstyled">
                            <li><strong>Placed By:</strong> @TempData["HoldPlacedBy"]</li>
                            <li><strong>Start Date:</strong> @TempData["HoldStartDate"]</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">
                            Please contact the administration office for more information about your account hold.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 