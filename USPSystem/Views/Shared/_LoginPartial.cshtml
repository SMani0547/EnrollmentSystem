@using Microsoft.AspNetCore.Identity
@using USPSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item me-3">
        <a class="nav-link text-white d-flex align-items-center" asp-area="" asp-controller="Student" asp-action="Profile" title="Profile">
            <i class="bi bi-person-circle me-2"></i>
            <div class="d-flex flex-column">
                <small class="text-light-emphasis">@user.StudentId</small>
                <span>Welcome, @user.FirstName!</span>
            </div>
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="btn btn-outline-light btn-sm">
                <i class="bi bi-box-arrow-right me-1"></i>Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </li>
}
</ul> 

