@model USPFinance.Models.StudentFinance
@{
    ViewData["Title"] = "Finance Menu";
    var noFinanceRecord = ViewBag.NoFinanceRecord ?? false;
    var outstandingBalance = Model?.TotalFees - Model?.AmountPaid ?? 0;
}

<div class="container mt-4">
    <h1 class="mt-4">Finance Menu</h1>
    
  
        @if (noFinanceRecord)
        {
            <div class="alert alert-warning">
                No financial record found.
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h4>Finance Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table">
                                <tr>
                                    <th>Total Fees:</th>
                                    <td>@Model.TotalFees.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Amount Paid:</th>
                                    <td>@Model.AmountPaid.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Outstanding Balance:</th>
                                    <td>@outstandingBalance.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>@Model.LastUpdated.ToString("g")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Invoice" asp-action="DownloadFinanceReport" class="btn btn-primary">Generate Invoice</a>
                    </div>
                </div>
            </div>
        }
    
</div> 