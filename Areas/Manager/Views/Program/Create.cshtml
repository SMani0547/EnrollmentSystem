@model AcademicProgram

@{
    ViewData["Title"] = "Create Program";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Academic Program</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus me-1"></i>
            New Program Details
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Level" class="control-label"></label>
                            <select asp-for="Level" class="form-select" asp-items="Html.GetEnumSelectList<ProgramLevel>()">
                                <option value="">Select Level</option>
                            </select>
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Duration" class="control-label"></label>
                            <input asp-for="Duration" class="form-control" type="number" min="1" max="6" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CreditPoints" class="control-label"></label>
                            <input asp-for="CreditPoints" class="form-control" type="number" min="0" />
                            <span asp-validation-for="CreditPoints" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="OfferingYear" class="control-label"></label>
                            <input asp-for="OfferingYear" class="form-control" type="number" min="2024" />
                            <span asp-validation-for="OfferingYear" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="MajorCreditsRequired" class="control-label">Major Credits Required</label>
                            <input asp-for="MajorCreditsRequired" class="form-control" type="number" min="0" value="48" />
                            <span asp-validation-for="MajorCreditsRequired" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="MinorCreditsRequired" class="control-label">Minor Credits Required</label>
                            <input asp-for="MinorCreditsRequired" class="form-control" type="number" min="0" value="24" />
                            <span asp-validation-for="MinorCreditsRequired" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">Active Program</label>
                    </div>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Program
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 